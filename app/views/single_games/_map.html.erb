<!DOCTYPE html>
<html>
<head>
<meta http-equiv="content-type" content="text/html; charset=UTF-8"/>
<title>Google Maps JavaScript API v3 Example: Marker Animations</title>
<link href="http://code.google.com/apis/maps/documentation/javascript/examples/standard.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script type="text/javascript">
  var marker;

  function initialize() {
    var markers = [];

    var colorado = new google.maps.LatLng(39.4421,-104.595);
    var mapOptions = {
      zoom: 8,
      mapTypeId: google.maps.MapTypeId.HYBRID,
      center: colorado
    };

    var map = new google.maps.Map(document.getElementById("map_canvas"),
            mapOptions);

    function drop() {
      //var sw = map.getBounds().getSouthWest();
      //var ne = map.getBounds().getNorthEast();
       for (var i = 0; i < 1;) {
        setTimeout(function() {
          markers.push(new google.maps.Marker({
            position: new google.maps.LatLng(39.4421,-104.595),
            map: map,
            draggable: true,
            animation: google.maps.Animation.DROP
          }));
        }, i * 200);
      }
    }
    document.getElementById("drop").onclick = drop;

    google.maps.event.addListenerOnce(map, 'tilesloaded', drop);
  }
</script>
</head>
<body onload="initialize()" style="font-family: sans-serif; font-size: 14px;">
<div id="map_canvas" style="border: 1px solid black; width: 500px; height: 400px;">map div</div>
<p style="margin-top: 5px">
  <button id="+">+</button>
</p>
</body>
</html>
